{
    "compileOnSave": false,
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
      "typeRoots": ["./src/types", "./node_modules/@types"],
      "esModuleInterop": true,
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "noImplicitAny": false,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
      "plugins": [{ "name": "typescript-tslint-plugin" }],
      "resolveJsonModule": true,
      "sourceMap": true,
      "strict": true
    }
  }